// Test file for Build 8b Native/JIT backend
// Note: Strings and most standard library functions are not yet supported in native LLVM compilation
// (they will be added in Build 9). This test focuses on primitives and control flow.

println("=== Kinetix Native LLVM Backend Test ===")
println("If you see this, basic printf is working.")

let a = 10
let b = 25
let sum = a + b
println("Sum of 10 and 25 is expected to be 35. Checking logic...")

if sum == 35 {
    println("Math and equality check passed!")
} else {
    println("Math check failed!")
}

println("Testing while loop (1 to 5):")
mut counter = 1
while counter <= 5 {
    println(counter)
    counter = counter + 1
}

println("Testing conditionals with floats:")
let pi = 3.14159
let r = 2.0
let area = pi * r * r

if area > 10.0 {
    println("Area is greater than 10.0 (Expected)")
}

